<ol class="breadcrumb">
    <li>
        <a href="{{ path(home_link) }}">
            <i class="fa fa-home"></i>
            Accueil
        </a>
    </li>
    {% if breadcrumbs %}
        {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.route is empty ? '#' : '/' in breadcrumb.route ? breadcrumb.route : path(breadcrumb.route, breadcrumb.routeArgs) }}">{{ breadcrumb.label }}</a></li>
        {% endfor %}
    {% endif %}
    <li class="active">{{ title }}</li>
</ol>